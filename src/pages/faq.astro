---
import Layout from '../layouts/Layout.astro';

const faqs = [
  {
    question: "What is Azzle?",
    answer: "Azzle is an AI Technology & Startup HTML Template designed to help businesses showcase their products and services."
  },
  {
    question: "How can I customize Azzle?",
    answer: "You can customize Azzle by modifying the HTML, CSS, and JavaScript files. The template uses Tailwind CSS for styling, making it easy to adjust the design."
  },
  // Add more FAQs as needed
];
---

<Layout title="FAQ">
  <section class="w-full py-12 md:py-24 lg:py-32">
    <div class="container px-4 md:px-6">
      <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl">Frequently Asked Questions</h2>
      <div class="mt-8 grid gap-4 md:gap-8">
        {faqs.map((faq, index) => (
          <div class="space-y-2">
            <h3 class="text-xl font-bold">{faq.question}</h3>
            <p class="text-muted-foreground">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>