                </div>
                <!-- Slider main container -->
                <div class="swiper brand-slider">
                    <!-- Additional required wrapper -->
                    <div class="swiper-wrapper flex justify-between items-center flex-wrap">
                        <!-- Slides -->
                        <div class="swiper-slide">
                            <Image src={b1} alt="brand-1" width="180" height="38"
                                class="max-w-full" />
                        </div>
                        <div class="swiper-slide">
                            <Image src={b2} alt="brand-2" width="183" height="35"
                                class="max-w-full" />
                        </div>
                        <div class="swiper-slide">
                            <Image src={b3} alt="brand-3" width="172" height="35"
                                class="max-w-full" />
                        </div>
                        <div class="swiper-slide">
                            <Image src={b4} alt="brand-4" width="175" height="30"
                                class="max-w-full" />
                        </div>
                        <div class="swiper-slide">
                            <Image src={b5} alt="brand-5" width="168" height="36"
                                class="max-w-full" />
                        </div>
                    </div>
                </div>
            </div>
            <!-- Section Container -->
            <!-- Hero Background Shape 1 -->
            <div
                class="orange-gradient-1 absolute -right-[150px] top-[370px] -z-[1] h-[500px] w-[500px] animate-spin rounded-[500px]">
